<div id="main">
    <div id="product_list">
<!--<table id="productpage">-->
    <table>
      <tr class="products_table" id="titles">
        <br />
        <th>Cover</th>
        <th>Title</th>
        <th>Description</th>
        <th>Genre</th>
        <th>Rating</th>
        <th>Status</th>
        <th>price</th>
        <th>Image_url</th>
        <th>Wanted</th>
        <th>Buy_price</th>
        <!--<th>UserID</th>-->
      </tr>

<% @products.each do |product| %>
   <% if current_user %>
  <tr class= "<%= cycle('list_line_odd', 'list_line_even') %>">
    <td>
      <%=  image_tag(product.image_url, :class => 'list_image') %>
    </td>
    <!--<td id="list_description">  </td>-->
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.genre %></td>
        <td><%= product.rating %></td>
        <td><%= product.stock_status %></td>
        <td><%= product.price %></td>
        <td><%= product.image_url %></td>
        <td><%= product.wanted %></td>
        <td><%= product.buy_price %></td>
        <!--<td><%= product.user_id %></td>-->
    <% if current_user and current_user.admin %>
        <td><%= link_to 'Show', product %> <br />
        <%= link_to 'Edit', edit_product_path(product) %>  <br />
        <%= link_to 'Destroy', product, :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
    <% end %>
  </tr>
    <% end %>
    </table>
    </div>
    <% if current_user and current_user.admin %>
      <%= link_to 'New Product', new_product_path %>
    <% end %>
  <% if current_user and current_user.admin %>
      <p><%= will_paginate @products %></p>
  <% end %>
</div>
