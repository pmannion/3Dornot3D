<div id="mainmargin">
  <% if logged_in? %>
      <h2>Welcome to Check Out</h2>
      <div class="depot_form">
        <fieldset>
          <legend>Please Enter Your Shipping Details</legend>
          <%= render 'form' %>
        </fieldset>
      </div>

  <% else %>
      <h1>Login</h1>
      <%= form_tag sessions_path do %>
          <div class="field">
            <%= label_tag :email %><br />
            <%= text_field_tag :email %>
          </div>
          <div class="field">
            <%= label_tag :password %><br />
            <%= password_field_tag :password %>
          </div>
          <div class="actions">
            <%= submit_tag 'Login' %>
          </div>
      <% end %>
  <% end %>
</div>