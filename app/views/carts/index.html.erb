<div id="mainmargin">
  <% if current_user and current_user.admin %>
  <h1>Listing carts</h1>
<table>
  <tr>
    <th>Value</th>
    <th>Discount</th>
    <th>Total</th>
  </tr>
<% @carts.each do |cart| %>
  <tr>
    <td><%= number_to_currency(cart.total_price) %></td>
    <td><%= number_to_currency(cart.promo) %></td>
    <td><%= number_to_currency(cart.grand_total) %></td>
    <td><%= link_to 'Show', cart %></td>
    <td><%= link_to 'Edit', edit_cart_path(cart) %></td>
    <td><%= link_to 'Destroy', cart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
  <% end %>
</table>
<br />
  <% if current_user and current_user.admin %>
<%= link_to 'New Cart', new_cart_path %>
<p><%= will_paginate @carts %></p>
  <% end %>
    </div>